<% layout('layout2')%>
<!DOCTYPE html>
<div class="container-fluid">
  <div class="row content">
	  <% include ../partials/sidebar %>
    <div class="col-sm-9">
	    <div class="form-group ">
		    <h1>Add Account</h1>
		    <hr>
	    </div>
	    <div class="form-group ">
		    <% if(hasErrors) {%>
			    <% for(var i = 0; i <messages.length; i++) {%>
				   <div class="alert alert-danger">
					 <a href="#" class="close" data-dismiss="alert" aria-label="close">
						&times;
					 </a>
					 <%= messages[i] %>

				   </div>
			    <% } %>
			<% } %>
		</div>
	    <form method="POST" action="/account/create">
		   <div class="form-group ">
			  <label for="">Full Name</label>
			  <input id="fullname" class="form-control" name="fullname" type="text" style="margin-bottom:20px;">
			  <span id="errorMsg1" class="help-block"></span>
		   </div>

		   <div class="form-group ">
			  <label for="">Address</label>
			  <input id="address" class="form-control" name="address" type="text" style="margin-bottom:20px;">
			  <span id="errorMsg2" class="help-block"></span>
		   </div>

		   <div class="form-group ">
			  <label for="">Age</label>
			  <input id="age" class="form-control" name="age" type="text" style="margin-bottom:20px;">
			  <span id="errorMsg3" class="help-block"></span>
		   </div>

		   <div class="form-group ">
			  <label for="">Email</label>
			  <input id="email" class="form-control" name="email" type="text" style="margin-bottom:20px;">
			  <span id="errorMsg4" class="help-block"></span>
		   </div>

		   <div class="form-group ">
			  <label for="">Password</label>
			  <input id="password" class="form-control" name="password" type="text" style="margin-bottom:20px;">
			  <span id="errorMsg5" class="help-block"></span>
		   </div>

		   <div class="form-group">
			   <br>
			  <input type="submit" value="Register Account" class="form-control btn btn-primary" style="">
		   </div>
	    </form>
    </div>
  </div>
</div>
