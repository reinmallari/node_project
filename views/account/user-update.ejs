<% layout('layout2')%>
<!DOCTYPE html>
<div class="container-fluid">
  <div class="row content">
	  <% include ../partials/sidebar %>
    <div class="col-sm-9">
	    <div class="form-group ">
		    <h1>Update Account</h1>
		    <hr>
	    </div>
	    <form action="/account/update-user/<%= data._id %>" method="post">
		   <input class="form-control" id="id" value="<%= data._id %>" type="hidden">
		   <div class="form-group ">
			  <label for="">Full Name</label>
			  <input class="form-control" name="fullname" value="<%= data.fullname %>" type="text" style="margin-bottom:20px;">
		   </div>
		   <div class="form-group ">
			  <label for="">Address</label>
			  <input class="form-control" name="address" value="<%= data.address %>" type="text" style="margin-bottom:20px;">
		   </div>
		   <div class="form-group ">
			  <label for="">Age</label>
			  <input class="form-control" name="age" value="<%= data.age %>" type="text" style="margin-bottom:20px;">
		   </div>
		   <div class="form-group ">
			  <label for="">Email</label>
			  <input class="form-control" name="email" value="<%= data.email %>" type="text" style="margin-bottom:20px;">
		   </div>
		   <div class="form-group ">
			  <label for="">Password</label>
			  <input class="form-control" name="password" value="" type="text" style="margin-bottom:20px;">
		   </div>
		   <div class="form-group ">
			   <button class="btn btn-lg upload-add-btn" type="button" data-toggle="modal" data-target="#file">Add File</button>
			   <span id="completed"></span>
			   <div id="file" class="modal fade" tabindex="-1" role="dialog">
				  <div class="modal-dialog">
					 <div class="modal-content">
						<div class="modal-header">
						    <button type="button" id="close" class="close" data-dismiss="modal">&times;</button>
						    <div class="modal-title">Upload Image</div>
						</div>
						<div class="modal-body">
						    <div class="row">
							   <div class="progress">
								  <div class="progress-bar" role="progressbar"></div>
							   </div>

							   <button class="btn btn-lg upload-btn" type="button">Upload File</button>
							   <input type="file" class="form-control" name="upload" id="upload-input" style="display:none">
						    </div>
						</div>
					 </div>
				  </div>
			   </div>
		   </div>
		   <div class="form-group">
			  <input type="submit" id="update_account" value="Update" class="form-control btn btn-primary" name="update_account" style="">
		   </div>
	    </form>
    </div>
  </div>
</div>
