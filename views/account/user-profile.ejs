<% layout('layout2')%>
<!DOCTYPE html>
<div class="container-fluid">
  <div class="row content">
	  <% include ../partials/sidebar %>
	  <div class="col-sm-9">
		  <h1>User Profile</h1>
	    <hr>
	    <div class="container_profile">
		      <div style="text-align:center">
		        <h2><%= user.id %></h2>
			   <h3><p><%= user.email %></p></h3>
			   <b><p><%= user.company.name %></p></b>
			   <a href="/account/update-user/<%= id %>" class="btn btn-primary hide_update_btn">
				 Update User
			   </a><br><br>
			   <a href="/message/<%= id %>" class="btn btn-primary hide_message_btn">
				 Message User
			   </a><br><br>
		      </div>
			 <%if (data.name != '') { %>
			      <div class="row_profile">
			        <div class="column_profile">
					   <%if (data.image == '') { %>
						   <img class="card-img-top" src="/images/template_avatar.png" alt="Card image" style="width:100%">
					   <% } %>
					    <%if (data.image!= '') { %>
						    <img class="card-img-top" src="/uploads/<%= data.image %>" alt="Card image" style="width:100%">
					     <% } %>
			        	</div>
			        <div class="column_profile">
			        </div>
			      </div>
			<% } %>
		    </div>
		</div>
  	</div>
</div>
