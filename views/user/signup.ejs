<div class = "container">
	<div class="text-center reg_msg">
	    <h1><a href="/">RateMe</a></h1>
	</div>
	<div class="wrapper">
		<% if(hasErrors) {%>
              <% for(var i = 0; i <messages.length; i++) {%>
                  <div class="alert alert-danger">
                     <a href="#" class="close" data-dismiss="alert" aria-label="close">
                         &times;
                     </a>
                     <%= messages[i] %>
                  </div>
              <% } %>
          <% } %>
		<form id="signupForm" action="/signup" method="post" name="Login_Form" class="form-signin">
		    <h3 class="form-signin-heading">Sign Up</h3>
			  <hr class="colorgraph"><br>
			   <input type="text" class="form-control" name="fullname" placeholder="Fullname" autofocus="" />
			   <br>
			   <input type="text" class="form-control" name="address" placeholder="Address" autofocus="" />
			   <br>
			   <input type="text" class="form-control" name="age" placeholder="Age" autofocus="" />
			   <br>
			  <input type="text" class="form-control" name="email" placeholder="Email" autofocus="" />
			  <br>
			  <input type="password" class="form-control" name="password" placeholder="Password"/>
			  <button class="btn btn-lg btn-primary btn-block"  name="Submit" value="Login" type="Submit">Signup</button>
		</form>
		<div class="center_account_text">
		    <h4>Already have an account? <a href="/login">Login</a></h4>
		</div>
	</div>
</div>
